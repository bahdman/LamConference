@model LamConference.ViewModel.IDViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Check code</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>
    <header>
        <nav>
            <div class="header flex">
                <div class="logo"><h1><span class="caps">lam </span>Conference</h1></div>

                <ul id="ul" class="flex">
                    <li><a asp-controller="Event" asp-action="Home">Home</a></li>
                    <li><a asp-controller="Event" asp-action="About">About</a></li>
                    <li><a asp-controller="Event" asp-action="OurSpeakers">Our Speakers</a></li>
                    <li><a asp-controller="Event" asp-action="WhatToExpect">What To Expect</a></li>
                </ul>

                <div id="hamburger">
                    <div id="fcross" class="cross fcross"></div>
                    <div id="scross" class="cross scross"></div>
                </div>
            </div>
        </nav>
    </header>
    <div id="bg" class="bg"></div>
    

    <div id="zIndex" class="flex generate mainContainer">
        <div class="center flex">
            <div class="regContainer flex">
                <div class="containerText">
                    <h3>Reference ID chekcer</h2>
                    <h5>Kindly input the reference ID</h5>
                </div>

                <div class="containerInput">
                    <form class="flex" asp-controller="Registration" asp-action="ValidateCode">
                        <input asp-for="RefID" placeholder="Reference ID">
                        <span asp-validation-for="RefID" class="error cnt"></span>
                        <button class="btn blackBtn">Check Validity</button> 
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/main.js"></script>
</body>
</html>
