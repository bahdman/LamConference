@using LamConference.ViewModel
@model LamConference.ViewModel.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- <div class="bgCover"></div> -->
    <header>
        <div class="header flex">
            <div class="logo">LGFIX</div>
    </header>
    <div class="coverRx"></div>

    <div class="loginContainer flex">
        <div class="LgContainer flex shadow">

            <div class="LgImg"><img src="~/images/12145005_Wavy_Cst-02_Single-06 1.png" alt=""></div>

            <div class="LgContent">
                <form asp-controller="Account" asp-action="Login">
                    <h2>Sign In</h2>

                    <div class="inputField flex">
                        <div class="emailField">
                            <div class="column">
                                <input asp-for="Username" placeholder="Username">
                                <span asp-validation-for="Username" class="error"></span>
                            </div>
                            
                            <div class="icon emailIcon">
                                <img src="~/images/user.svg" alt="Email Logo">
                            </div>
                        </div>

                        <div class="passwordField">
                            <div class="column">
                                <input asp-for="Password" placeholder="Password">
                                <span asp-validation-for="Password" class="error"></span>
                            </div>
                            
                            <div class="icon passwordIcon">
                                <img src="~/images/key.svg" alt="Password Logo">
                            </div>
                        </div>
                    
                        <label asp-for="RememberMe"></label>
                        <input class="normal" asp-for="RememberMe">
                    </div>

                    <span asp-validation-for="Username" class="error"></span>

                    <div class="btnContent flex">
                        <button class="blackBg btn">Submit</button>
                        <!-- <h6>Forgot Password? <span>Recover</span></h6>-->
                        <h6>Don't have an account? <span>Sign Up</span></h6>                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
